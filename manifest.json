{
    "manifest_version": 2,
    "name": "Password Manager",
    "version": "1.0",
    "description": "A simple password manager",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Access your passwords"
    },
    "permissions": ["tabs", "activeTab"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["main.css"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    }
}
